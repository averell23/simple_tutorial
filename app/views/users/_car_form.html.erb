<h3>Add a new car</h3>
<% form_for(@car) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :model_name %><br />
    <%= f.text_field :model_name %>
  </p>
	<p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :made_in %><br />
    <%= f.date_select :made_in, :start_year => 1880, :end_year => Time.now.year %>
  </p>
  <%= hidden_field :car, :user_id %>
  <p>
    <%= f.submit 'Add a car' %>
  </p>
<% end %>